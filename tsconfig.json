{
	"extends": "ts-node/node16/tsconfig.json",
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ESNext",
		"jsx": "react",
		"checkJs": false,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"include": ["**/*.ts", "**/*.mts"],
	"exclude": ["node_modules", "**/node_modules/*"],
	"ts-node": {"esm": true}
}
